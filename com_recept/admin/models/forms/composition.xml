<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            id="id"
            name="id"
            type="hidden"
            class="inputbox"
            label="COM_RECEPT_ID_LABEL"
            description="COM_RECEPT_ID_DESC"
            size="10"
            default="0"
            readonly="true" />		

        <field
            id="name"
            name="name"
            type="text"
            label="COM_RECEPT_NAME_LABEL"
            description="COM_RECEPT_NAME_DESC"
            class="inputbox"
            size="30"
            required="true" />	

        <field
            id="published"
            name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            size="1"
            default="1">
            <option
                value="1">
                JPUBLISHED</option>
            <option
                value="0">
                JUNPUBLISHED</option>
            <option
                value="2">
                JARCHIVED</option>
            <option
                value="-2">
                JTRASHED</option>
        </field>		
    </fieldset>
</form>

